  "item": [
    {
      "name": "Product Reviews",
      "item": [
        {
          "name": "Get Reviews for Product",
          "request": {
            "method": "GET",
            "url": { "raw": "http://localhost:4000/api/reviews/{{productId}}", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["api", "reviews", "{{productId}}"] }
          }
        },
        {
          "name": "Add Review to Product",
          "request": {
            "method": "POST",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }, { "key": "Content-Type", "value": "application/json", "type": "text" } ],
            "body": { "mode": "raw", "raw": "{\n  \"rating\": 5,\n  \"comment\": \"Great product!\"\n}" },
            "url": { "raw": "http://localhost:4000/api/reviews/{{productId}}", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["api", "reviews", "{{productId}}"] }
          }
        }
      ]
    },
    {
