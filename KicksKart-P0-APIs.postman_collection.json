        { "name": "Delete Category", "request": { "method": "DELETE", "header": [ { "key": "Authorization", "value": "Bearer {{adminToken}}", "type": "text" } ], "url": { "raw": "http://localhost:4000/api/categories/{{id}}", "protocol": "http", "host": ["localhost"], "port": "4000", "path": ["api", "categories", "{{id}}"] } } }
